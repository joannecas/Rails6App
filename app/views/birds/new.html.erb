<h1>Create a new bird reference</h1>

<% if @bird.errors.any? %>
<h2>Errors</h2>
<ul>
  <% @bird.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
  <% end %>
  </ul>
<% end %>

<%= form_with scope: :bird, url: birds_path, local: true do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit %>

<% end %>