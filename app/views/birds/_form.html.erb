<h1><%= @title %></h1>

<% if @bird.errors.any? %>
<h2>Errors</h2>
<ul>
  <% @bird.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %>
    </li>
  <% end %>
  </ul>
<% end %>

<% yield %>

<%= form_with(model: @bird, local: true) do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

